<?xml version="1.0"?>
<launch>

  <param name="use_sim_time" value="true"/>

  <node pkg="rosbag" type="play" name="rosbag_player" args="$(find xiaomi_lds_myhome)/demo/my_home.bag --clock -r 3" />

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find xiaomi_lds_myhome)/demo/rviz.rviz"/>

  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.0 0.0 0.0 3.14 3.14 0.0 /base_link /laser 100" />

